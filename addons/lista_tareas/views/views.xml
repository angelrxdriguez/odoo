<odoo>
    <data>
        <record model="ir.ui.view" id="lista_tareas.list">
            <field name="name">lista_tareas list</field>
            <field name="model">lista_tareas.lista_tareas</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="tarea"/>
                    <field name="prioridad"/>
                    <field name="urgente"/>
                    <field name="realizada"/>
                    <field name="responsable"/>
                     <field name="estado"/> 
                    <field name="fecha"/>

                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="lista_tareas.kanban">
            <field name="name">lista_tareas kanban</field>
            <field name="model">lista_tareas.lista_tareas</field>
            <field name="arch" type="xml">
                <kanban>
                    <field name="tarea"/>
                    <field name="prioridad"/>
                    <field name="urgente"/>
                    <field name="realizada"/>
                    <field name="responsable"/>
<field name="estado"/>
 <field name="fecha"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_global_click">
                                <div>
                                    <strong><field name="tarea"/></strong>
                                </div>
                                  <div>
                                    Estado: <field name="estado"/>
                                </div>
                                <div>
                                    Responsable: <field name="responsable"/>
                                </div>
                                <div>
                                    Prioridad: <field name="prioridad"/>
                                </div>
                                <div>
                                    Urgente: <field name="urgente"/>
                                </div>
                                <div>
                                    Realizada: <field name="realizada"/>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>
<record model="ir.ui.view" id="lista_tareas.calendar">
    <field name="name">lista_tareas calendar</field>
    <field name="model">lista_tareas.lista_tareas</field>
    <field name="arch" type="xml">
        <calendar date_start="fecha" string="Calendario de tareas">
            <field name="tarea"/>
        </calendar>
    </field>
</record>

<record model="ir.actions.act_window" id="lista_tareas.action_window">
    <field name="name">Listado de tareas pendientes</field>
    <field name="res_model">lista_tareas.lista_tareas</field>
    <field name="view_mode">kanban,tree,calendar,form</field>
    <field name="context">{'group_by': 'estado'}</field>
</record>


        <menuitem name="Listado de tareas" id="lista_tareas.menu_root"/>
        <menuitem name="Opciones Lista Tareas" id="lista_tareas.menu_1"
                  parent="lista_tareas.menu_root"/>
        <menuitem name="Mostrar lista" id="lista_tareas.menu_1_list"
                  parent="lista_tareas.menu_1"
                  action="lista_tareas.action_window"/>
    </data>
</odoo>
