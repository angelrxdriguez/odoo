<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <record id="instituto_modulo_tree" model="ir.ui.view">
    <field name="name">instituto.modulo.tree</field>
    <field name="model">instituto.modulo</field>
    <field name="arch" type="xml">
      <tree>
        <field name="name"/>
        <field name="ciclo_id"/>
        <field name="profesor_id"/>
      </tree>
    </field>
  </record>

  <record id="instituto_modulo_form" model="ir.ui.view">
    <field name="name">instituto.modulo.form</field>
    <field name="model">instituto.modulo</field>
    <field name="arch" type="xml">
      <form string="Módulo">
        <group>
          <field name="name"/>
          <field name="ciclo_id"/>
          <field name="profesor_id"/>
        </group>
        <group string="Alumnos matriculados">
          <field name="alumno_ids" widget="many2many_tags"/>
        </group>
      </form>
    </field>
  </record>

  <record id="instituto_modulo_action" model="ir.actions.act_window">
    <field name="name">Módulos</field>
    <field name="res_model">instituto.modulo</field>
    <field name="view_mode">tree,form</field>
  </record>
</odoo>
