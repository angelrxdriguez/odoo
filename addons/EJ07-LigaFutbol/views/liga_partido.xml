<?xml version="1.0" encoding="utf-8"?>
<odoo>



<record id="liga_partido_action" model="ir.actions.act_window">
    <field name="name">Partidos de la liga</field>
    <field name="res_model">liga.partido</field>
    <field name="view_mode">kanban,tree,form,graph</field>
    
</record>

<menuitem name="Partidos de la liga"
          id="liga_partido_menu"
          parent="liga_base_menu"
          sequence="10"/>

<menuitem id="menu_ver_partidos"
          name="Ver partidos"
          parent="liga_partido_menu"
          action="liga_partido_action"
          sequence="1"/>

<menuitem id="menu_wizard_liga_partido"
          name="AÃ±adir partido"
          parent="liga_partido_menu"
          action="action_wizard_liga_partido"
          sequence="10"/>

    <record id="liga_partido_view_form" model="ir.ui.view">
        <field name="name">Formulario PartidDos</field>
        <field name="model">liga.partido</field>
        <field name="arch" type="xml">
            <form>
            <header>
            <button name="sumar_dos_locales"
                type="object"
                string="+2 goles locales!"/>
            <button name="sumar_dos_visitantes"
                type="object"
                string="+2 goles visitantes!"/>
            </header>
                <group>
                    <group>
                        <field name="equipo_casa" />
                        <field name="goles_casa" />
                    </group>

                    <group>
                        <field name="equipo_fuera" />
                        <field name="goles_fuera" />
                    </group>

                </group>
            </form>
        </field>
    </record>

    <!-- Vista Tree -->
    <record id="liga_partido_view_tree" model="ir.ui.view">
        <field name="name">Lista de partidos de la liga</field>
        <field name="model">liga.partido</field>
        <field name="arch" type="xml">
            <tree>
                <!-- Indicamos que atributos usaremos al hacer la vista Tree -->
                <field name="equipo_casa" />
                <field name="goles_casa" />
                <field name="equipo_fuera" />
                <field name="goles_fuera" />

            </tree>
        </field>
    </record>


    <!-- Vista Kanban -->
    <record id="liga_partido_view_kanban" model="ir.ui.view">
        <field name="name">Lista de partidos de la liga</field>
        <field name="model">liga.partido</field>
        <field name="arch" type="xml">
            <!-- Agrupamos por el atributo "parent_id"-->
            <kanban>
                <!-- Indicamos que atributos usaremos al hacer la vista Kanban -->

                <field name="equipo_casa" />
                <field name="goles_casa" />
                <field name="equipo_fuera" />
                <field name="goles_fuera" />

                <!-- Plantilla QWeb para indicar como es la tarjeta Kanban-->

                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click">
                            <div class="oe_kanban_content">
                                <div class="oe_kanban_card">
                                    <div class="text-muted">
                                        <b>
                                            <p>- Resultado -</p>
                                        </b>
                                    </div>
                                    <div >
                                        <field name="equipo_casa" /> :
                                        <field name="goles_casa" />
                                    </div>
                                </div>
                                <div>
                                    <field name="equipo_fuera" /> :
                                    <field name="goles_fuera" />
                                </div>
                            </div>
                        
                        </div>
                    </t>
                </templates>

            </kanban>
        </field>
    </record>

</odoo>